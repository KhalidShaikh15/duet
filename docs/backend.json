{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "username": {
          "type": "string",
          "description": "The user's display name."
        },
        "password": {
          "type": "string",
          "description": "The user's password (for manual login)."
        },
        "isOnline": {
          "type": "boolean",
          "description": "Whether the user is currently online."
        },
        "lastActive": {
          "type": "string",
          "format": "date-time",
          "description": "The last time the user was active."
        },
        "unreadFrom": {
          "type": "object",
          "description": "Map of user UIDs to unread message counts."
        }
      },
      "required": ["uid", "username", "isOnline", "lastActive"]
    },
    "Message": {
      "title": "Message",
      "description": "A chat message.",
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "senderId": {
          "type": "string",
          "description": "The UID of the user who sent the message."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The time the message was sent."
        },
        "read": {
          "type": "boolean",
          "description": "Whether the message has been read."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of an image attached to the message."
        }
      },
      "required": ["senderId", "timestamp", "read"]
    },
    "Call": {
      "title": "Call",
      "description": "A WebRTC call signaling document.",
      "type": "object",
      "properties": {
        "callerId": {
          "type": "string"
        },
        "calleeId": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "active", "ended"]
        },
        "offer": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "sdp": {
              "type": "string"
            }
          }
        },
        "answer": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "sdp": {
              "type": "string"
            }
          }
        }
      },
      "required": ["callerId", "calleeId", "status"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/chats/{chatId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/Message"
      },
      "description": "Stores messages for a specific chat."
    },
    "/calls/{callId}": {
      "schema": {
        "$ref": "#/entities/Call"
      },
      "description": "Stores WebRTC signaling data for video calls."
    }
  }
}
